- title "Hipóteses"

%table
  %tr
    %th Descrição
  - for hypothesis in @hypotheses
    %tr
      %td= hypothesis.description
      %td= link_to 'Exibir', hypothesis
      %td= link_to 'Editar', edit_hypothesis_path(hypothesis)
      %td= link_to 'Remover', hypothesis, :confirm => 'Tem certeza que deseja remover?', :method => :delete

%p= link_to "Nova Hipótese", new_hypothesis_path
